{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["dom", "es2015"],
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES5",
    "esModuleInterop": true,
    "types": ["jest"],
    "jsx": "react",
    "skipDefaultLibCheck": true,
    "isolatedModules": true,
    "outDir": "dist/"
  },
  "exclude": ["node_modules", "target"]
}
